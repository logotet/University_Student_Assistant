<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Fragments.FilterFragment">

        <TextView
            android:id="@+id/txt_sort"
            android:text="Sort"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/rg_sort"
            android:layout_width="match_parent"
            android:layout_height="@dimen/profile_radio_button_height"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_sort">

            <Button
                android:id="@+id/btn_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_tab_selector"
                android:checked="true"
                android:gravity="center"
                android:text="Name"
                android:textColor="@drawable/drawable_tab_text_color_selector"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_state"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_tab_selector"
                android:button="@null"
                android:gravity="center"
                android:text="State"
                android:textColor="@drawable/drawable_tab_text_color_selector"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btn_cost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_tab_selector"
                android:button="@null"
                android:gravity="center"
                android:text="Cost"
                android:textColor="@drawable/drawable_tab_text_color_selector"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_acc_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_tab_selector"
                android:button="@null"
                android:gravity="center"
                android:text="Acceptance"
                android:textColor="@drawable/drawable_tab_text_color_selector"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_grad_rate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/drawable_tab_selector"
                android:button="@null"
                android:gravity="center"
                android:text="Graduation"
                android:textColor="@drawable/drawable_tab_text_color_selector"
                android:textStyle="bold" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>