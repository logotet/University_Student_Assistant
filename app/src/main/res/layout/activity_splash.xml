<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:foregroundGravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.SplashActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="136dp"
            android:src="@drawable/ic_main_app"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/txt_app_title" />

        <TextView
            android:id="@+id/txt_app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="University Student Assistant"
            android:textAlignment="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold"
            android:textColor="#3c069a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/txt_motto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="Find your place"
            android:textAlignment="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold"
            android:textColor="#3c069a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf ="@id/imageView" />

        <TextView
            android:id="@+id/txt_motto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:text="Stay on track"
            android:textAlignment="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold"
            android:textColor="#3c069a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf ="@id/txt_motto" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>